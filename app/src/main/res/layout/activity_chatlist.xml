<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chatlist_background">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp">

        <ImageView
            android:id="@+id/category"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/btn_category_copy" />


        <TextView
            android:id="@+id/title"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/scdream5"
            android:text="채팅방"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/chat_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="120dp"
        android:orientation="vertical">
        
        <LinearLayout
            android:id="@+id/chat_room_1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/chatlist_line">

            <ImageView
                android:id="@+id/chat_profile"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/profile_image_copy"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:id="@+id/chat_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp">

                    <TextView
                        android:id="@+id/chat_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="유저이름"
                        android:fontFamily="@font/scdream5"
                        android:textSize="20sp"
                        android:textColor="#494949"/>

                    <TextView
                        android:id="@+id/message_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="22:30 PM"
                        android:paddingLeft="150dp"
                        android:textSize="15sp"
                        android:textColor="#000000"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/chat_content"
                        android:layout_width="240dp"
                        android:layout_height="50dp"
                        android:text="채팅내용~~~~~~~~"
                        android:fontFamily="@font/scdream3"
                        android:textSize="15sp"
                        android:textColor="#000000"
                        android:layout_marginRight="20dp"/>


                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/btn_message_check"
                        android:text="#"
                        android:textAlignment="center"
                        android:textSize="15sp"
                        android:textColor="#ffffff"
                        android:layout_marginRight="10dp"
                        android:paddingTop="5dp"/>

                </LinearLayout>

            </LinearLayout>

            </LinearLayout>


        <LinearLayout
            android:id="@+id/chat_room_2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/chatlist_line">

            <ImageView
                android:id="@+id/chat_profile_2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/profile_image_copy"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:id="@+id/chat_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp">

                    <TextView
                        android:id="@+id/chat_user_name_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="유저이름"
                        android:fontFamily="@font/scdream5"
                        android:textSize="20sp"
                        android:textColor="#494949"/>

                    <TextView
                        android:id="@+id/message_time_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="22:30 PM"
                        android:paddingLeft="150dp"
                        android:textSize="15sp"
                        android:textColor="#000000"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/chat_content_2"
                        android:layout_width="240dp"
                        android:layout_height="50dp"
                        android:text="채팅내용~~~~~~~~"
                        android:fontFamily="@font/scdream3"
                        android:textSize="15sp"
                        android:textColor="#000000"
                        android:layout_marginRight="20dp"/>


                    <TextView
                        android:id="@+id/count_chat"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/btn_message_check"
                        android:text="#"
                        android:textAlignment="center"
                        android:textSize="15sp"
                        android:textColor="#ffffff"
                        android:layout_marginRight="10dp"
                        android:paddingTop="5dp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>









    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>