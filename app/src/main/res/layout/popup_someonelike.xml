<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content">

    <!-- 타이틀바 -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="매칭 되었어요!"
            android:textSize="20sp"
            android:textColor="#fff"
            android:gravity="center"
            android:background="#ff80ce"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:fontFamily="@font/scdream3"/>
    </LinearLayout>
    <!-- //end 타이틀바 -->

    <!-- Notice -->
    <LinearLayout
        android:padding="24dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/liked_user_name"
            android:fontFamily="@font/scdream3"
            android:textSize="20sp"
            android:textColor="#000"
            android:alpha="0.87"
            android:gravity="center"
            android:layout_marginBottom="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="유저이름"/>


        <TextView
            android:text="당신에게 좋아요를 눌렀어요"
            android:fontFamily="@font/scdream3"
            android:textSize="15sp"
            android:textColor="#000"
            android:alpha="0.87"
            android:gravity="center"
            android:layout_marginBottom="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>
    <!-- Notice -->

    <View
        android:background="#66bdbdbd"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <!-- 이 버튼 -->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/btn_checkProfile"
            android:text="프로필 확인하기"
            android:textSize="12sp"
            android:padding="16dp"
            android:gravity="center"
            android:background="#fcdef0"
            android:layout_width="150dp"
            android:layout_height="53dp"
            android:fontFamily="@font/scdream3"
            android:onClick="goProfile"/>

        <Button
            android:text="확인"
            android:textSize="12sp"
            android:padding="16dp"
            android:gravity="center"
            android:background="#00000000"
            android:layout_width="150dp"
            android:layout_height="53dp"
            android:onClick="mOnClose"
            android:fontFamily="@font/scdream3"/>

    </LinearLayout>
    <!--//이동 버튼 -->
</LinearLayout>
