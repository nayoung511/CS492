<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text="로그인"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/scdream3"
        android:textSize="23dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/scdream3"
        android:text="안녕하세요! 만나서 반갑습니다.\n  로그인 해주세요."
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textColor="#FFFFFF" />

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="380dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/whiteboard"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_user_email"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:background="@drawable/login_btn_email"
            android:hint="   이메일"
            android:inputType="textEmailAddress"
            android:fontFamily="@font/scdream3"
            android:textColorHint="#FFFFFF"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/et_password"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/login_btn_email"
            android:hint="   비밀번호"
            android:inputType="textPassword"
            android:fontFamily="@font/scdream3"
            android:textColorHint="#FFFFFF"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="로그인"

            android:layout_marginTop="30dp"
            android:background="@drawable/login_btn_login"
            android:fontFamily="@font/scdream3"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/instr_pw_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/scdream3"
            android:text="혹시 비밀번호가 기억나시지 않으시나요?" />

        <Button
            android:id="@+id/gotoPasswordResetBtn"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/login_btn_empty"
            android:text="비밀번호 재설정"
            android:textColor="#0b75f8"
            android:fontFamily="@font/scdream3"/>
    </LinearLayout>


</LinearLayout>
